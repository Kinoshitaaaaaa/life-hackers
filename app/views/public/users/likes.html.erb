<p>いいねした投稿一覧</p>
<%#= render 'posts/post', like_post: @like_posts %>
<% @like_posts.each do |post| %>
<%= link_to image_tag( post.image.variant(resize: '100x100') ), post_path(post.id) %>
<%= link_to post.user.user_name, user_path(post.user.id) %>
<i class="fa fa-heart unlike-btn"></i>
<%= post.likes.length %>
<%= link_to post.title, post_path(post.id) %>
<% end %>

