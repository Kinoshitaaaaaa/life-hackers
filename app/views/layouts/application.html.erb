<!DOCTYPE html>
<html>
  <head>
    <title>LIFE HACKERS</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/17908fdbcd.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
   <header>
     <nav class="navbar navbar-expand-lg navbar-dark bg-dark" >
       <div class="container">
         <a class="navbar-brand" href="https://ea11e21ad98847218d40a96605fee3e7.vfs.cloud9.ap-northeast-1.amazonaws.com/">
           <span>LIFE HACKERS</span>
         </a>
         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle-navigation">
           <span class="navabr-toggler-icon"></span>
         </button>
         <div class="collapse navbar-collapse" id="navbarNavDropdown">
           <ul class="navbar-nav ml-auto">
             <% if admin_signed_in? %>
              <li class="nav-item">
                <%= link_to admin_posts_path do %>
                  <i class="fas fa-book-open">投稿一覧</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_users_path do %>
                  <i class="fas fa-users">ユーザー一覧</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_genres_path do%>
                  <i class="fa-solid fa-tag">ジャンル一覧</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_admin_session_path, method: :delete do %>
                  <i class="fas fa-sign-out-alt">ログアウト</i>
                <% end %>
              </li>

             <% elsif user_signed_in? %>
             <li>
              <%=link_to user_path(current_user),class: "nav-link text-light" do %>
               <i class="fas fa-home"></i>
               トップページ
              <% end %>
             </li>
             <li>
              <%=link_to new_post_path,class: "nav-link text-light" do %>
              <i class="fas fa-users"></i>
              投稿フォーム
              <% end %>
             <li>
              <%=link_to users_path,class: "nav-link text-light" do %>
              <i class="fas fa-users"></i>
              ユーザー一覧
              <% end %>
             </li>
              <li>
              <%=link_to posts_path,class: "nav-link text-light" do %>
              <i class="fas fa-book-open"></i>
              投稿一覧
              <% end %>
             </li>
              <li>

             <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light" do %>
              <i class="fas fa-sign-out-alt"></i>
              ログアウト
              <% end %>
             </li>

             <% else %>
             <li>
              <%=link_to root_path,class: "nav-link text-light" do %>
              <i class="fas fa-home"></i>
              トップページ
              <% end %>
             </li>
             <li>
              <%=link_to about_path,class: "nav-link text-light" do %>
              <i class="fas fa-link"></i>
              サイト概要
              <% end %>
             </li>
             <li>
              <%=link_to new_user_registration_path,class: "nav-link text-light" do %>
              <i class="fas fa-user-plus"></i>
              新規登録
              <% end %>
             </li>
             <li>
              <%=link_to new_user_session_path,class: "nav-link text-light" do %>
              <i class="fas fa-sign-in-alt"></i>
              ログイン
              <% end %>
             </li>
             <% end %>
           </ul>
         </div>
       </div>
     </nav>
   </header>
   <%= render 'public/shared/flash_message' %>
      <%= yield %>
   <footer>
    <div class="container mt-5">
     <div class="row">
       <div class="mx-auto">
         <p>CopyRight Infratop.inc</p>
       </div>
     </div>
    </div>
   </footer>
  </body>
</html>

