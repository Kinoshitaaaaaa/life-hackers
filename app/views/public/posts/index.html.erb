<body>
  <main>
    <% if @post.errors.any? %>
     <%= @post.errors.count %>errors prohibited this obj from being saved:
      <ul>
       <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
       <% end %>
      </ul>
    <% end %>
    <div class="container px-5 px-sm-0">
     <div class="row">

    <%= render 'create', posts: @posts %>

     <div class="col-md-8 offset-md-1">
      <h2>投稿</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>投稿者</th>
            <th>タイトル</th>
            <th>ジャンル</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
           <% @posts.each do |post| %>
          <tr>
            <td>
            <%= link_to user_path(post.user) do %>
             <%= image_tag post.user.get_profile_image(80,80) %>
             <%= post.user.user_name %>
            <% end %>
            </td>
            <td>
            <%= link_to post_path(post) do %>
             <%= post.title %>
            <% end %>
            </td>
            <td><%= post.genre.name %></td>
           </tr>
         <% end %>
        </tbody>
      </table>
     </div>
     </div>
    </div>
  </main>
</body>
