<h2>検索結果</h2>

<table class="table table-hover table-inverse">
   <thead>
          <tr>
            <th>投稿者</th>
            <th>タイトル</th>
            <th>ジャンル</th>
            <th colspan="3"></th>
          </tr>
        </thead>
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user_path(user) do %>
            <%= user.user_name %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがPostの時) -->
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to user_path(post.user) do %>
            <%= image_tag post.user.get_profile_image(80,80) %>
            <%= post.user.user_name %>
            <% end %>
          </td>
          <td>
             <%= link_to post_path(post) do %>
             <%= post.title %>
             <% end %>
             </td>
          <td><%= post.genre.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>