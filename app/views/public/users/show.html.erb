<body>
 <main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
   <div class="row">

   <%= render 'public/posts/create', posts: @posts %>

    <div class="col-md-8 offset-md-1">
      <h2>投稿</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>投稿者</th>
            <th>タイトル</th>
            <th>ジャンル</th>
          </tr>
        </thead>
         <tbody>
           <% @posts.each do |post| %>
          <tr>
            <td>
             <%= image_tag post.user.get_profile_image(80,80) %>
             <%= post.user.user_name %>
            </td>
            <td>
            <%= link_to post_path(post) do %>
             <%= post.title %>
            <% end %>
            </td>
            <td><%= post.genre.name %></td>
           <% end %>
          </tr>
        </tbody>
      </table>
    </div>
   </div>
  </div>
 </main>
</body>