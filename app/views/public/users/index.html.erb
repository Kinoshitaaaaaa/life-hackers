<body>
  <main>
   <p id="notice"></p>
   <div class="container px-5 px-sm-0">
    <div class="row">

       <%= render 'public/posts/create', posts: @posts %>

    <div class="col-md-8 offset-md-1">
      <h2>会員様一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Profile Image</th>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
         <% @users.each do |user| %>
         <% if user.is_deleted == false %>
          <tr>
            <td><%= image_tag user.get_profile_image(80,80) %></td>
            <td><%= user.user_name %></td>
            <td><%= link_to "詳細", user_path(user.id) %></td>
          </tr>
          <% end %>
         <% end %>
        </tbody>
      </table>
     </div>
    </div>
   </div>
